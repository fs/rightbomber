html
  margin: 0
  padding: 0

body
  margin: 0
  padding: 0
  text-align: center
  background-color: #bbb

#game
  display: inline-block
  position: relative
  margin-top: 25px
  border: 2px solid #ccc

.bomb
  position: absolute
  background: url("/images/bomb.svg")
  background-size: 62px 22px
  background-position: 0 0
  &.exploded
    background: rgba(255, 0, 0, 0.01)

.bomb-piece
  position: absolute
  background: rgb(255, 0, 100)

.dummy
  position: absolute
  background-color: darkgray
  box-shadow: 0px 2px gray inset, 2px 0px gray inset, -2px 0px gray inset, 0px -2px gray inset


.player
  z-index: 1
  box-shadow: 0px 2px red inset, 2px 0px blue inset, -2px 0px blue inset, 0px -2px blue inset
  position: absolute
  background: #fff
  &.right
    -webkit-transform: rotate(90deg)

  &.up
  &.left
    -webkit-transform: rotate(-90deg)

  &.down
    -webkit-transform: rotate(180deg)



#map
  border-collapse: collapse
  background-color: #ddd
  tr td
    /* outline: 1px solid #ddffdd */
    &.grass
      background: transparent
      box-shadow: 0px -1px #cccccc inset, 0px 1px #cccccc inset, 1px 0px #cccccc inset, -1px 0px #cccccc inset

    &.stone
      background-color: #999
      box-shadow: 0px -10px #888888 inset, 0px 1px #888888 inset, 1px 0px #888888 inset, -1px 0px #888888 inset

.control-hints
  display: inline-block
  vertical-align: top
  margin: 25px 10px
  background: #fff
  font-family: Helvetica, Arial, sans-serif
  font-size: 15px
  padding: 10px 20px
  border: 2px solid #CCC
  box-shadow:  0 2px 1px 0 rgba(0, 0, 0, 0.1)
  opacity: 0.7
  -webkit-transition: all 1s ease
  transition: all 1s ease
  &:hover
    opacity: 1

  span
    font-weight: bold

  dl
    margin: 0 auto

  dt
    margin: 10px 0 0
    font-size: 13px

  dd
    margin: 0

  .horizontal, .vertical
    margin: auto
    text-align: center

  .vertical
    width: 25px
    margin-bottom: -47px
    kbd
      &:first-child
        margin-bottom: 25px

  .horizontal
    width: 75px
    margin-bottom: 35px
    kbd
      margin: 0
      &:first-child
        margin-right: 25px

  kbd
    display: inline-block;
    width: 25px;
    height: 23px;
    padding: 5px;
    box-sizing: border-box;
    font: normal 0.85em / 1 "Lucida Grande", Lucida, Arial, sans-serif;
    text-align: center;
    text-decoration: none;
    border-radius: .3em;
    border: none;
    cursor: default;
    background: rgb(250, 250, 250);
    color: rgb(50, 50, 50);
    text-shadow: 0 0 2px rgb(255, 255, 255);
    box-shadow: inset 0 0 1px rgb(255, 255, 255), inset 0 0 0.4em rgb(200, 200, 200), 0 0.1em 0 rgb(130, 130, 130), 0 0.11em 0 rgba(0, 0, 0, 0.4), 0 0.1em 0.11em rgba(0, 0, 0, 0.9);
