html
  margin: 0
  padding: 0

body
  margin: 0
  padding: 0
  text-align: center
  background-color: #bbb

#game
  display: inline-block
  position: relative
  margin-top: 25px
  border: 2px solid #ccc

.bomb-piece
  position: absolute
  background: rgb(255, 0, 100)

.dummy
  position: absolute
  background-color: darkgray
  box-shadow: 0px 2px gray inset, 2px 0px gray inset, -2px 0px gray inset, 0px -2px gray inset

.player
  z-index: 1
  box-shadow: 0px 2px red inset, 2px 0px blue inset, -2px 0px blue inset, 0px -2px blue inset
  position: absolute
  background: #fff
  &.right
    -webkit-transform: rotate(90deg)

  &.up
  &.left
    -webkit-transform: rotate(-90deg)

  &.down
    -webkit-transform: rotate(180deg)

.bomb
  position: absolute

  border-radius: 100px
  background-color: #444
  box-shadow: -1px -1px #000 inset, -2px -2px #111 inset, -3px -3px #222 inset, -4px -4px #333 inset

  &:after
    content: ''

    display: inline-block
    position: absolute

    top: 15%
    left: 15%
    width: 30%
    height: 30%

    border-radius: 100px
    background-color: #fff
    box-shadow: 0 0 5px 1px #fff

  &.exploded
    // Cool but slow
    // background-color: transparent
    // box-shadow: 0 0 10px #000
    display: none

  &.exploded:after
    display: none

#map
  border-collapse: collapse
  background-color: #ddd
  tr td
    /* outline: 1px solid #ddffdd */
    &.grass
      background: transparent
      box-shadow: 0px -1px #cccccc inset, 0px 1px #cccccc inset, 1px 0px #cccccc inset, -1px 0px #cccccc inset

    &.stone
      background-color: #999
      box-shadow: 0px -10px #888888 inset, 0px 1px #888888 inset, 1px 0px #888888 inset, -1px 0px #888888 inset
